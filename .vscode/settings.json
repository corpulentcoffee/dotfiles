/**
 * This file only needs settings specific to managing the dotfiles repository;
 * it can be assumed `../home/.config/Code/User/settings.json` is symlinked and
 * in effect, so only overrides and additional settings need be present here.
 */
{
  "editor.codeActionsOnSave": { "source.organizeImports": true },

  "files.associations": {
    "**/.aws/cli/alias": "ini"
  },

  /** Assumes `black` already present, like via `pip3 install --user` or apt. */
  "python.formatting.provider": "black",

  /** Requires Microsoft's Pylance extension; see `extensions.json`. */
  "python.languageServer": "Pylance",

  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  }
}
